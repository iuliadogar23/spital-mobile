<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_large"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/spacing_llarge"
    android:layout_centerVertical="true"
    tools:context=".ui.navigation.ui.newconsult.NewConsultFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga consult nou"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/grey_90"
        app:fontFamily="sans-serif-light" />

    <View
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_xxlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sectie dorita"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/grey_40" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:helperText="Filled Dropdown"
        app:hintTextColor="@color/grey_60">
        <!--        app:helperTextEnabled="true"-->
        <!--        app:errorEnabled="true"-->
        <!--        app:boxCornerRadiusTopEnd="6dp"-->
        <!--        app:boxCornerRadiusTopStart="6dp">-->


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dropdown1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Solicitat"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/grey_40" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/grey_90"
        app:helperText="Filled Dropdown">
<!--        app:helperTextEnabled="true"-->
<!--        app:errorEnabled="true"-->
<!--        app:boxCornerRadiusTopEnd="6dp"-->
<!--        app:boxCornerRadiusTopStart="6dp">-->


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dropdown2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fisa Nr."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/grey_40" />
    <AutoCompleteTextView
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="Cauta fisa medicala"
        android:completionThreshold="1"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesaj solicitare consult"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/grey_40" />

    <EditText
        android:id="@+id/et_mesaj_solicitare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_middle"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:fabCustomSize="65dp"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_check" />



</LinearLayout>