<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_llarge"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingRight="@dimen/spacing_llarge"
    android:paddingBottom="@dimen/spacing_xxlarge"
    tools:context=".ui.addpatientpage.ui.patientdetails.PatientDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Nume"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:hint="Ex. Agency Web"
            android:textColorHint="@color/grey_20" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Prenume"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:hint="Platform, type, etc."
            android:textColorHint="@color/grey_20" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Cod Numeric Personal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:hint="Platform, type, etc."
            android:textColorHint="@color/grey_20" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Data nasterii"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:hint="Platform, type, etc."
            android:textColorHint="@color/grey_20" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_age"
            style="@style/Autocomplete"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_weight="1"
            android:background="@drawable/edit_text_outlined"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableRight="@drawable/ic_arrow_down"
            android:editable="false"
            android:focusable="false"
            android:minHeight="@dimen/spacing_xlarge"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:hint="Sex"
            android:textColorHint="@color/grey_80"
            android:textColor="@color/grey_80" />

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et_gender"
            style="@style/Autocomplete"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_weight="1"
            android:background="@drawable/edit_text_outlined"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableRight="@drawable/ic_arrow_down"
            android:editable="false"
            android:focusable="false"
            android:minHeight="@dimen/spacing_xlarge"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:hint="Grupa sanguina"
            android:textColorHint="@color/grey_80"
            android:textColor="@color/grey_80" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Oras"
                android:textColor="@color/grey_80"
                android:maxLines="1"
                android:theme="@style/Autocomplete"
                android:singleLine="true"
                android:text="Cluj-Napoca" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judet"
                android:textColor="@color/grey_80"
                android:maxLines="1"
                android:theme="@style/Autocomplete"
                android:singleLine="true"
                android:text="Cluj" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:textColorHint="@color/colorPrimaryText"
            android:textColor="@color/grey_60"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Strada"
                android:maxLines="1"
                android:textColor="@color/grey_80"
                android:theme="@style/Autocomplete"
                android:singleLine="true"
                android:text="Plopilor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:textColorHint="@color/colorPrimaryText"
            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nr. Bl Sc. Et. Ap."
                android:textColor="@color/grey_80"
                android:maxLines="1"
                android:theme="@style/Autocomplete"
                android:singleLine="true"
                android:text="12 ap.5" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Telefon"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:hint="Platform, type, etc."
            android:textColorHint="@color/grey_20" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mlarge"
        android:text="Alergii"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_outlined"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:lines="2"
            android:text="description"
            android:textColor="@color/grey_80" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>